<UserControl
    x:Class="CloudPrinter.View.ErrorViews.DisConnectionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CloudPrinter.View.ErrorViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <Grid>
        <Grid
            Name="OffLineContent"
            Width="600"
            Height="400">
            <Border
                Background="#FFFFFFFF"
                BorderThickness="1"
                CornerRadius="5">
                <UIElement.Effect>
                    <DropShadowEffect Direction="270" Color="Gray" />
                </UIElement.Effect>
            </Border>
            <Image
                Width="128"
                Height="128"
                Margin="0,50,0,0"
                VerticalAlignment="Top"
                Source="/Knd.Printer.Theme;component/Resources/Images/network_offline.png" />
            <TextBlock
                Margin="0,150,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="50"
                Foreground="#FFFF0000"
                Text="服务器通讯中断"
                TextWrapping="Wrap" />
        </Grid>
    </Grid>
</UserControl>